<Window x:Class="TransportCompany.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TransportCompany"
        mc:Ignorable="d"
        Title="ООО «Логистик-транс»" Height="450" Width="800" MinHeight="250" MinWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="350*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <TextBlock Text="{Binding ElementName=FrameMain, Path=Content.Title}" Style="{StaticResource Title}"/>
        </StackPanel>
        <Frame x:Name="FrameMain" NavigationUIVisibility="Hidden" Grid.Row="1">
        </Frame>
    </Grid>
</Window>
